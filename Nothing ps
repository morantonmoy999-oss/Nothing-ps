    margin: 0 auto;
  }
  #envelope.closed {
    transform: rotateX(0deg);
  }
  #envelope.opened {
    transform: rotateX(-180deg);
  }

  /* Envelope front flap */
  .front.flap {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    background: #f8a3bc;
    border-bottom: 3px solid #d74e80;
    border-radius: 15px 15px 0 0;
    transform-origin: bottom center;
    box-shadow: 0 5px 10px rgba(215, 78, 128, 0.5);
    backface-visibility: hidden;
  }

  /* Envelope front pocket */
  .front.pocket {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150px;
    background: #fcc7db;
    border-radius: 0 0 20px 20px;
    box-shadow: inset 0 5px 20px rgba(255,255,255,0.7);
    backface-visibility: hidden;
  }

  /* Back side of flap (inside flap) */
  #envelope.opened .front.flap {
    background: #d94d7c;
