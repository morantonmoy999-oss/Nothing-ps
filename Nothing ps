<body>

  <div class="envelope-wrapper">
    <div id="envelope" class="closed" tabindex="0" aria-label="Envelope">
      <div class="front flap"></div>
      <div class="front pocket"></div>
      <div class="letter" aria-live="polite">
        <div class="line">Hey there,</div>
        <div class="line">You are truly beautiful,</div>
        <div class="line">and every time I see you,</div>
        <div class="line">the world feels a little brighter.</div>
      </div>
      <div class="hearts">
        <div class="heart a1"></div>
        <div class="heart a2"></div>
        <div class="heart a3"></div>
      </div>
    </div>
  </div>

  <div class="buttons">
    <button id="openBtn">Open</button>
    <button id="closeBtn">Close</button>
  </div>

<script>
  const envelope = document.getElementById('envelope');
  const openBtn = document.getElementById('openBtn');
  const closeBtn = document.getElementById('closeBtn');
  const lines = document.querySelectorAll('.letter .line');

  openBtn.addEventListener('click', () => {
    envelope.classList.remove('closed');
    envelope.classList.add('opened');

    // Reset lines opacity
    lines.forEach(line => (line.style.opacity = 0));

    // Show lines one by one
    lines.forEach((line, index) => {
      setTimeout(() => {
        line.style.opacity = 1;
      }, index * 1200); // 1.2 seconds interval between lines
    });
  });

  closeBtn.addEventListener('click', () => {
    envelope.classList.remove('opened');
    envelope.classList.add('closed');

    // Hide all lines immediately
    lines.forEach(line => (line.style.opacity = 0));
  });
</script>

</body>
